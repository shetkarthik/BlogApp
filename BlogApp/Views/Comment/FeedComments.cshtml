@{
}

@model List<FeedComments>;




<section>
    <div class="container scrollable_div">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-12 col-md-12 col-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h4 class="card-title text-center text_variant mb-3 card_overflow letter_spaced ">@Html.DisplayFor(modelItem => item.FeedCommentString)</h4>

                            <p class="card-text mb-2 text-center fw-light card_overflow">
                                @Html.DisplayFor(modelItem => item.UserId)
                            </p>
                            
                            
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>



    

</section>
